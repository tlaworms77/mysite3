	<typeAliases>
		<typeAlias alias="uservo" type="com.example.mysite.vo.UserVo" />
		<typeAlias alias="guestbookvo" type="com.example.mysite.vo.GuestbookVo" />
		<typeAlias alias="boardvo" type="com.example.mysite.vo.BoardVo" />
